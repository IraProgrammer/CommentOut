<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:bottom="12dp"
        android:drawable="@drawable/ic_test_arrows"
        android:top="12dp">
        <shape>
            <corners android:radius="2dp" />
            <stroke
                android:width="1dp"
                android:color="#FF000000" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        android:bottom="12dp"
        android:top="12dp">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:endColor="#de254c"
                    android:gradientRadius="2dp"
                    android:startColor="#4366dd"
                    android:type="linear"
                    android:useLevel="true" />
                <stroke
                    android:width="1dp"
                    android:color="#FF000000" />
            </shape>
        </clip>
    </item>
</layer-list>